NAME = philo

CC = gcc
RM = rm -rf
CFLAGS = -Wall -Wextra -Werror -pthread -g

SRCS =	src/main.c \
		src/init_philo.c \

OBJS = $(SRCS:.c=.o)

all: $(NAME)

%.o: %.c
	$(CC) $(CFLAGS) -c $< -o $@

$(NAME): $(OBJS)
	$(CC) $(OBJS) -o $(NAME)

clean:
	$(RM) $(OBJS)

fclean: clean
	$(RM) $(NAME)

re: fclean all

.PHONY: all clean fclean re
